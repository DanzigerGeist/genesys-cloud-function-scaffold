{
  "imports": {
    "@jackfiszr/faker": "jsr:@jackfiszr/faker@1.1.6",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@0.11.1",
    "@std/assert": "jsr:@std/assert@1.0.13",
    "aws-lambda": "npm:@types/aws-lambda@8.10.149",
    "esbuild": "npm:esbuild@0.25.4"
  },
  "tasks": {
    "build": {
      "description": "Build the target files.",
      "command": "deno run -A build/build.ts",
      "dependencies": [
        "clean"
      ]
    },
    "check:all": {
      "description": "Run code tests and other checks.",
      "dependencies": [
        "check:docs",
        "check:fmt",
        "check:lint",
        "check:test"
      ]
    },
    "check:docs": {
      "description": "Check the documentation.",
      "command": "deno doc --lint src/"
    },
    "check:fmt": {
      "description": "Check the code formatting.",
      "command": "deno fmt --check"
    },
    "check:lint": {
      "description": "Run the linter.",
      "command": "deno lint"
    },
    "check:test": {
      "description": "Run unit tests.",
      "command": "deno test test/ -A --permit-no-files"
    },
    "clean": {
      "description": "Clean the build folder.",
      "command": "rm -rf dist/"
    },
    "package": {
      "description": "Build the distributable ZIP.",
      "command": "deno run -A build/package.ts",
      "dependencies": [
        "build"
      ]
    },
    "update": {
      "description": "Update the dependencies.",
      "command": "deno outdated --update --latest"
    }
  },
  "fmt": {
    "lineWidth": 120
  }
}
